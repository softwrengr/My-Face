<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="10sp"
        android:elevation="0dp"
        app:cardCornerRadius="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5sp">

            <RelativeLayout
                android:id="@+id/card_ten"
                android:layout_width="match_parent"
                android:layout_height="210dp">

                <LinearLayout
                    android:id="@+id/layout_social_one_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:layout_marginLeft="25sp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/card_fb"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:layout_marginRight="5sp"
                        android:src="@mipmap/card_10_fb" />

                    <ImageView
                        android:id="@+id/card_twitter"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:layout_marginRight="5sp"
                        android:src="@mipmap/card_10_twitter" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/social_row_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_social_one_row"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="3sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/card_insta"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:layout_marginRight="5sp"
                        android:src="@mipmap/card_10_insta" />

                    <ImageView
                        android:id="@+id/card_in"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:src="@mipmap/card_10_in" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="25sp">

                    <ImageView
                        android:id="@+id/iv_card"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_marginTop="10sp"
                        android:scaleType="fitXY"
                        android:background="@drawable/black_corner"
                        android:src="@mipmap/image" />

                    <TextView
                        android:id="@+id/tv_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="15sp"
                        android:layout_toRightOf="@id/iv_card"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_card_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_card_name"
                        android:layout_marginLeft="5sp"
                        android:layout_toRightOf="@id/iv_card"
                        android:fontFamily="@font/poppin_light"
                        android:gravity="center"
                        android:text="Designation"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/layout_profile"
                    android:background="@mipmap/card_10_background">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_profile"
                        android:layout_gravity="right"
                        android:layout_marginTop="10sp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5sp"
                            android:layout_marginTop="10sp"
                            android:gravity="right">


                            <LinearLayout
                                android:id="@+id/address_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/card_10_location" />

                                <TextView
                                    android:id="@+id/tv_card_email"
                                    android:layout_width="140sp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10sp"
                                    android:fontFamily="@font/thin"
                                    android:text="Address"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/address_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/address_layout"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/card_10_phone" />

                                <TextView
                                    android:id="@+id/tv_card_no"
                                    android:layout_width="140sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10sp"
                                    android:fontFamily="@font/thin"
                                    android:text="Phone"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/address_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/address_email"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/card_10_address" />


                                <TextView
                                    android:id="@+id/tv_card_address"
                                    android:layout_width="140sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10sp"
                                    android:layout_toRightOf="@id/profile_layout"
                                    android:fontFamily="@font/thin"
                                    android:text="Email"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                            </LinearLayout>


                        </RelativeLayout>
                    </LinearLayout>


                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_card_who_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="John Doe"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_card_who_share"
                    android:layout_marginLeft="10sp"
                    android:text="Business Card"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_small_edit"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_toLeftOf="@id/iv_small_share"
                    android:src="@mipmap/edit_small"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20sp"/>



                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_small_share"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20sp"
                    android:src="@mipmap/share_small" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/save_share_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_save_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/save" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Card"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_edit_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:src="@drawable/edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Card"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_share_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share Card"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>