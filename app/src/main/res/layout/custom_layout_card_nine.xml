<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="8sp"
        android:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/card_nine"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:layout_margin="5sp"
                android:background="@color/black">

                <RelativeLayout
                    android:id="@+id/detail_layout"
                    android:layout_width="260sp"
                    android:layout_height="match_parent"
                    android:background="@mipmap/card_9_white_back">

                    <TextView
                        android:id="@+id/tv_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Kashif Taj"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_card_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tv_card_name"
                        android:fontFamily="@font/poppin_light"
                        android:text="Product Developer"/>

                    <LinearLayout
                        android:id="@+id/social_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_card_post"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:src="@mipmap/card_six_phone"
                            android:layout_marginLeft="15sp"/>

                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:src="@mipmap/card_six_address"
                            android:layout_marginLeft="15sp"/>

                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:src="@mipmap/card_six_location"
                            android:layout_marginLeft="15sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/social_layout"
                        android:gravity="center"
                        android:layout_marginTop="5sp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_card_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/tv_card_name"
                            android:fontFamily="@font/poppin_light"
                            android:text="111 444 555 333"/>

                        <TextView
                            android:id="@+id/tv_card_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/tv_card_name"
                            android:fontFamily="@font/poppin_light"
                            android:text="Your Address"/>
                        <TextView
                            android:id="@+id/tv_card_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/tv_card_name"
                            android:fontFamily="@font/poppin_light"
                            android:text="softwrengr@gmail.com"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_info"
                        android:gravity="center"
                        android:layout_marginRight="20sp"
                        android:layout_marginTop="10sp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5sp"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/card_fb"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:src="@mipmap/card_seven_fb" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/card_insta"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="5sp"
                            android:src="@mipmap/card_seven_insta" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/card_in"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="5sp"
                            android:src="@mipmap/card_seven_in" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/card_google"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="5sp"
                            android:src="@mipmap/card_seven_google" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/card_twitter"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginLeft="5sp"
                            android:src="@mipmap/card_seven_twitter" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/detail_layout">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_card"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/pro"/>

                </RelativeLayout>

            </RelativeLayout>

            <!-- below -->
            <RelativeLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="5sp">

                <TextView
                    android:id="@+id/tv_card_who_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="John Doe"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@id/tv_card_who_share"
                    android:text="Business Card"/>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_small_share"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/share_small"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20sp"/>

            </RelativeLayout>

        </LinearLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>