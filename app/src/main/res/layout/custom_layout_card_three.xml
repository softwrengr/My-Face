<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:elevation="0dp">

    <RelativeLayout
        android:id="@+id/card_three"
        android:layout_width="match_parent"
        android:layout_height="250dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.9"
                android:background="@mipmap/cart_3_retegle" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:background="#ffffff" />

        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:paddingBottom="5sp"
            android:src="@mipmap/card_3_line" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130sp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:paddingBottom="20sp"
            android:src="@mipmap/card_3_back" />

        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="KASHIF TAJ"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_social"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">

            <TextView
                android:id="@+id/tv_card_address"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="Your Address"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_card_no"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:maxLines="1"
                android:text="12345-67891-12345"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_card_email"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="center"
                android:maxLines="1"
                android:text="email@email.com"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_social"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginRight="5sp"
                android:src="@mipmap/card_3_facebook" />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginRight="5sp"
                android:src="@mipmap/twitter" />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginRight="5sp"
                android:src="@mipmap/card_3_google" />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginRight="5sp"
                android:src="@mipmap/card_3_insta" />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@mipmap/card_3_in" />


        </LinearLayout>
    </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>