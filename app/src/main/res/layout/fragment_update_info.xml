<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UpdateInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp">

        <ImageView
            android:id="@+id/iv_for_card"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:src="@mipmap/cam"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/et_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:layout_marginTop="10sp"
            android:background="@mipmap/edit_text"
            android:inputType="text"
            android:hint="@string/name"/>

        <EditText
            android:id="@+id/et_card_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:layout_marginTop="5sp"
            android:background="@mipmap/edit_text"
            android:inputType="text"
            android:hint="Post/Designation"/>

        <EditText
            android:id="@+id/et_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:layout_marginTop="5sp"
            android:background="@mipmap/edit_text"
            android:inputType="number"
            android:hint="Phone Number"/>

        <EditText
            android:id="@+id/et_card_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:layout_marginTop="5sp"
            android:background="@mipmap/edit_text"
            android:inputType="textEmailAddress"
            android:hint="Email"/>

        <EditText
            android:id="@+id/et_card_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:layout_marginTop="5sp"
            android:background="@mipmap/edit_text"
            android:inputType="text"
            android:hint="Address"/>

        <EditText
            android:id="@+id/et_card_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:layout_marginTop="5sp"
            android:background="@mipmap/edit_text"
            android:inputType="text"
            android:hint="Facebook"/>

        <EditText
            android:id="@+id/et_card_twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:layout_marginTop="5sp"
            android:background="@mipmap/edit_text"
            android:inputType="text"
            android:hint="Twitter"/>

        <EditText
            android:id="@+id/et_card_youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:layout_marginTop="5sp"
            android:background="@mipmap/edit_text"
            android:inputType="text"
            android:hint="Youtube"/>

        <EditText
            android:id="@+id/et_card_instagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:layout_marginTop="5sp"
            android:background="@mipmap/edit_text"
            android:inputType="text"
            android:hint="Instagram"/>

        <EditText
            android:id="@+id/et_card_skype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:layout_marginTop="5sp"
            android:background="@mipmap/edit_text"
            android:inputType="text"
            android:hint="Skype"/>

        <EditText
            android:id="@+id/et_card_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:layout_marginTop="5sp"
            android:background="@mipmap/edit_text"
            android:inputType="text"
            android:hint="Linked in"/>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:layout_below="@id/et_password"
            android:layout_marginTop="10sp"
            android:paddingLeft="10sp"
            android:layout_marginBottom="10sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"/>
    </LinearLayout>

    </ScrollView>

</RelativeLayout>