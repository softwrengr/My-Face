<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="8sp"
        android:elevation="0dp"
        app:cardCornerRadius="5sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/card_six"
            android:layout_width="wrap_content"
            android:layout_height="250sp"
            android:layout_margin="5sp"
            android:background="@mipmap/card_background">

            <LinearLayout
                android:id="@+id/upper"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/card_six_light_green" />

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/card_six_light_black" />

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/card_six_red" />

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/card_six_yellow" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/upper">

                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="200sp"
                    android:layout_height="100sp"
                    android:layout_marginTop="30sp"
                    android:background="@mipmap/card_six_image_back">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_card"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_marginLeft="2sp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/instagram" />

                    <TextView
                        android:id="@+id/tv_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/iv_card"
                        android:layout_marginTop="20sp"
                        android:layout_toRightOf="@id/iv_card"
                        android:layout_marginLeft="2sp"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="Abdullah Khan"
                        android:textColor="@color/white"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_card_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_card_name"
                        android:layout_toRightOf="@id/iv_card"
                        android:fontFamily="@font/poppin_light"
                        android:maxLines="1"
                        android:layout_marginLeft="2sp"
                        android:text="Abdullah Khan"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="5sp"
                    android:layout_toRightOf="@id/profile_layout"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:src="@mipmap/card_six_phone" />

                        <TextView
                            android:id="@+id/tv_card_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_card_name"
                            android:layout_marginLeft="5sp"
                            android:layout_toRightOf="@id/iv_card"
                            android:fontFamily="@font/poppin_light"
                            android:maxLines="1"
                            android:text="Abdullah Khan"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:src="@mipmap/card_six_address" />

                        <TextView
                            android:id="@+id/tv_card_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_card_name"
                            android:layout_marginLeft="5sp"
                            android:layout_toRightOf="@id/iv_card"
                            android:fontFamily="@font/poppin_light"
                            android:maxLines="1"
                            android:text="Abdullah Khan"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:src="@mipmap/card_six_location" />

                        <TextView
                            android:id="@+id/tv_card_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_card_name"
                            android:layout_marginLeft="5sp"
                            android:layout_toRightOf="@id/iv_card"
                            android:fontFamily="@font/poppin_light"
                            android:maxLines="1"
                            android:text="Abdullah Khan"
                            android:textSize="14sp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_layout"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="10sp"
                    android:layout_above="@id/below"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@mipmap/card_six_fb" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="5sp"
                        android:src="@mipmap/card_six_insta" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="5sp"
                        android:src="@mipmap/card_six_in" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="5sp"
                        android:src="@mipmap/card_six_google" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="5sp"
                        android:src="@mipmap/card_six_twitter" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/below"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="30sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/card_six_light_green" />

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/card_six_light_black" />

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/card_six_red" />

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/card_six_yellow" />

                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="5sp">

                <TextView
                    android:id="@+id/tv_card_who_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="John Doe"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@id/tv_card_who_share"
                    android:text="Business Card"/>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_small_share"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/share_small"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20sp"/>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/save_share_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_save_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/save" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Card"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_share_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share Card"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>