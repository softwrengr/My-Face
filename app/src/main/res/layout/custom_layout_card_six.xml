<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:elevation="0dp"
        app:cardCornerRadius="5sp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="250sp"
            android:layout_margin="5sp"
            android:background="@mipmap/card_background">

            <LinearLayout
                android:id="@+id/upper"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/card_six_light_green" />

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/card_six_light_black" />

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/card_six_red" />

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/card_six_yellow" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/upper">

                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="200sp"
                    android:layout_height="100sp"
                    android:layout_marginTop="30sp"
                    android:background="@mipmap/card_six_image_back">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_card_six"
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/image" />

                    <TextView
                        android:id="@+id/tv_card_six_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/iv_card_six"
                        android:layout_marginTop="20sp"
                        android:layout_toRightOf="@id/iv_card_six"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="1"
                        android:text="Abdullah Khan"
                        android:textColor="@color/white"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_card_six_occupation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_card_six_name"
                        android:layout_toRightOf="@id/iv_card_six"
                        android:fontFamily="@font/poppin_light"
                        android:maxLines="1"
                        android:text="Abdullah Khan"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="5sp"
                    android:layout_toRightOf="@id/profile_layout"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:src="@mipmap/card_six_phone" />

                        <TextView
                            android:id="@+id/tv_card_six_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_card_six_name"
                            android:layout_marginLeft="5sp"
                            android:layout_toRightOf="@id/iv_card_six"
                            android:fontFamily="@font/poppin_light"
                            android:maxLines="1"
                            android:text="Abdullah Khan"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:src="@mipmap/card_six_address" />

                        <TextView
                            android:id="@+id/tv_card_six_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_card_six_name"
                            android:layout_marginLeft="5sp"
                            android:layout_toRightOf="@id/iv_card_six"
                            android:fontFamily="@font/poppin_light"
                            android:maxLines="1"
                            android:text="Abdullah Khan"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:src="@mipmap/card_six_location" />

                        <TextView
                            android:id="@+id/tv_card_six_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_card_six_name"
                            android:layout_marginLeft="5sp"
                            android:layout_toRightOf="@id/iv_card_six"
                            android:fontFamily="@font/poppin_light"
                            android:maxLines="1"
                            android:text="Abdullah Khan"
                            android:textSize="14sp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_layout"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="10sp"
                    android:layout_above="@id/below"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@mipmap/card_six_fb" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="5sp"
                        android:src="@mipmap/card_six_insta" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="5sp"
                        android:src="@mipmap/card_six_in" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="5sp"
                        android:src="@mipmap/card_six_google" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="5sp"
                        android:src="@mipmap/card_six_twitter" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/below"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="30sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/card_six_light_green" />

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/card_six_light_black" />

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/card_six_red" />

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/card_six_yellow" />

                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>